/* pages/users/profile.wxss */
page {
    --header-radius: 300rpx;
    --avatar-radius: 150rpx;
    --nickname-font-size: 50rpx;
}

page, view {
    border: 0rpx dashed black;
}

.header-circle {
    position: absolute;
    left: 0;
    top: calc(var(--header-radius) * -1);
    width: 100%;
    height: calc(var(--header-radius) * 2);
    z-index: 1;
    background-color: var(--theme-blue);
    border-radius: 50%;
}

.user-info {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: calc(var(--header-radius) - var(--avatar-radius) - var(--page-padding));
    z-index: 2;
}

.user-avatar {
    border-radius: 50%;
    width: calc(var(--avatar-radius) * 2);
    height:calc(var(--avatar-radius) * 2);
    z-index: 2;
}

.user-nickname {
    font-size: var(--nickname-font-size);
}

#user-update {
    display: absolute;
    left: 0;
}

.options-container {
    border-radius: 30rpx;
    min-height: 100rpx;
    padding: 50rpx;
}

.option {
    height: 100rpx;
    display: flex;
    align-items: center;
}
.option:not(:last-child) {
    margin-bottom: 50rpx;
}

.option-icon {
    margin: 50rpx;
    height: 75rpx;
    width: 75rpx;
    background-size: 100%;
    background-repeat: no-repeat;
}

.title {
    color: rgb(57,72,103);
    font-size: 36rpx;
    font-weight: 600;
    margin-bottom: 40rpx;
}

.card-venue {
    height: 300rpx;
    width: 250rpx;
    border: 2rpx solid rgb(57,72,103);
    background-color: white;
    border-radius: 50rpx;
    box-shadow: 0rpx 8rpx 8rpx rgba(0,0,0,0.25);
    display: flex;
    flex-direction: column;
    align-items: center;
}

.venue-title {
    margin-top: 180rpx;
    color: white;
    font-size: 34rpx;
    font-weight: 500;
}

.venue-visits {
    color: white;
    background-color: var(--theme-blue);
    border: 2rpx solid var(--theme-blue);
    border-radius: 50rpx;
    padding: 6rpx 12rpx;
    font-size: 32rpx;
    font-weight: 500;
}
