      <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
          <view class="search">
                      Category {{array[index]}}
                      <image src="../../images/Category.png" class="category"></image>
              </view></picker>
    
    <view class="section">
    <view>Hours of Operation</view>
      <picker mode="time" value="{{time}}" start="00:00" end="23:59" bindchange="bindStartTimeChange">
        <view class="picker"> Open: 
          <text class="section-picker">{{venue.open_time}}</text>
        </view>
      </picker>

      <picker mode="time" value="{{time}}" start="00:00" end="23:59" bindchange="bindEndTimeChange">
        <view class="picker">
          Close: <text class="section-picker">{{venue.close_time}}</text>
        </view>
      </picker>
    </view>

    <view class="section section-description">
      <textarea data-name="description" value="{{venue.description}}" bindinput="updateData" class="weui-input" auto-focus placeholder="Specials"/>
    </view>

    <image wx:if="{{img}}" src="{{img}}" mode="aspectFit"></image>

    <view class="section" bindtap="chooseImg" >
      <input wx:if="{{!lvenue.photo_url}}" class="weui-input" disabled="true" placeholder="Add a Photo"/>
      <image wx:else src="{{venue.photo_url}}"/>
      <view wx:if="{{!venue.photo_url}}" class="section-photo"></view>
    </view>
    <view class="section" height="300rpx"><map height="600rpx"></map></view>

    </form>

    <view class="button-flex">
      <button class="" bindtap="createLesson">Save</button>
      <button class="" bindtap="goBack">Cancel</button>
    </view>

  <view>
  <choose-Photo bind:closePhotoPicker="closePhotoPicker" bind:changePhoto="changePhoto" wx:if="{{showPhotoPicker}}" />
  </view>
</view>