<!--pages/venues/form.wxml-->
<view class="main">

    <form bindsubmit="save">
      <view class="form-title">{{isEdit ? "Edit Venue" : "Add Venue"}}</view>

    <view class="section" >
      <input data-name="name" bindinput="updateData" maxlength="15" value="{{venue.name}}" class="weui-input" auto-focus placeholder="Venue Name"/>
    </view>

    <view class="section">
      <input data-name="name" maxlength="15" value="{{venue.name}}" bindinput="updateData" class="weui-input" auto-focus placeholder="Address"/>
    </view>

    <view class="section" >
      <input data-name="phone_number" bindinput="updateData" maxlength="15" value="{{venue.phone}}" class="weui-input" auto-focus placeholder="Phone Number"/>
    </view>

