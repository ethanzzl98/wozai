/* pages/venues/form.wxss */
.form-title {
    width: 100%;
    display: flex;
    color: var(--theme-blue);
    font-size: 44rpx;
    font-weight: 600;
    margin-bottom: 30rpx;
}

.logo {
    width: 250rpx;
    height: 250rpx;
}

.title {
    display: flex;
    align-items: center;
    text-align: center;
    margin-left: 35rpx;
    font-size: 60rpx;
}

.section {
    box-shadow: 0rpx 8rpx 8rpx rgba(0,0,0,0.25);
    padding: 20rpx 30rpx;
    font-size: 32rpx;
    background: white;
    border-radius: 50rpx;
    margin-bottom: 30rpx;
    border: 2rpx solid var(--theme-blue);
}

.input-title {
    font-size: 36rpx;
    color: var(--theme-blue);
    margin-left: 20rpx;
    margin-bottom: 5rpx;
    font-weight: 500;
}

checkbox {
    margin: 10rpx 0rpx 10rpx 10rpx;
}

label {
    font-size: 34rpx;
    color: var(--theme-blue);
}

.hours {
    font-size: 36rpx;
    color: var(--theme-blue);
    margin-left: 20rpx;
    margin-bottom: 5rpx;
    font-weight: 500;
    margin-top: 20rpx;
}

.hours-section {
    display: flex;
    justify-content: space-around;
    box-shadow: 0rpx 8rpx 8rpx rgba(0,0,0,0.25);
    padding: 20rpx 0rpx;
    font-size: 32rpx;
    background: white;
    border-radius: 50rpx;
    margin-bottom: 30rpx;
    border: 2rpx solid var(--theme-blue);
}

.section-description {
  height: 200rpx;
}

.section-picker {
  font-size: 36rpx;
  color: var(--theme-blue);
}

.btn-primary {
  border-radius: 50rpx;
  bottom: 5px;
  color: white;
  padding: 10rpx 20rpx;
  margin-top: 100rpx;
  margin-bottom: 50rpx;
  text-shadow: 2rpx 2rpx black;
  box-shadow: 0 0 2rpx rgb(1,1,1);
  background-color: #F27E0D;
}

.search {
  box-shadow: 4px 4px 8px rgba(0,0,0,0.1);
  margin: 56rpx 32rpx;
  padding: 20rpx 32rpx;
  box-sizing: border-box;
  font-size: 32rpx;
  color: rgb(2, 2, 2);
  display: flex;
  justify-content: space-between;
  background: white;
  border-radius: 25px;
}

.picker {
  color: rgb(112, 108, 108);
}

.section image {
  height: 100rpx;
  width: 100rpx;
  margin-top: 10rpx;
}

.close-btn {
  height: 64rpx;
  width: 64rpx;
  margin-left: 600rpx;
  margin-top: 25rpx;
} 

.section-photo {
  background-image: url('https://cdn-icons-png.flaticon.com/512/44/44289.png');
  background-size: contain;
  background-repeat: no-repeat;
  opacity: 0.5;
  background-position: center;
  padding: 20rpx 20rpx;
}

.button-flex {
    background-color: rgb(20,39,78);
    color: white;
    font-size: 45rpx;
    font-weight: bold;
    border-radius: 50rpx;
    width: 450rpx;
    margin-bottom: 30rpx;
}
