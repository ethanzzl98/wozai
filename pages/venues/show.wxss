/* pages/venues/show.wxss */
page {
    --avatar-radius: 50rpx;
    --my-avatar-radius: 75rpx;
}

.show-card {
    background-color: rgb(167,181,232, 0.29);
    background-size: cover;
    height: 100vh;
    overflow-y: scroll;
    
}

.show-card::-webkit-scrollbar {
    display: none;
  }


.venue-image {
    height: 400rpx;
    width: 100%;
    position: relative;
    border-bottom-right-radius: 60rpx;
    border-bottom-left-radius: 60rpx;
    margin-bottom: 10rpx;
}

.venue-title {
    position: absolute;
    bottom: 10rpx;
    left: 20rpx;
    color: white;
    font-weight: 600;
    font-size: 54rpx;
    text-shadow: 2rpx 2rpx 4rpx var(--theme-blue);
    margin-left: 30rpx;
}

.share-button {
    position: absolute;
    top: 20rpx;
    right: 20rpx;
    width: 70rpx;
    height: 70rpx;
    background-color: transparent;
    padding: 0;
}

.share-button::after {
    border: none;
}

.share-icon {
    width: 100%;
    height: 100%;
}


.checkin-button {
    display: flex;
    justify-content: center;
    margin-top: 40rpx !important;
    background-color: rgb(20,39,78);
    color: white;
    padding: 20rpx 100rpx;
    font-size: 45rpx;
    font-weight: bold;
    border-radius: 50rpx;
    width: 330rpx;
    margin: 0 auto;
    margin-bottom: 40rpx;
    white-space: nowrap;
}

.tag {
    background-color: white;
    color: var(--theme-blue);
    padding: 6rpx 30rpx;
    border-radius: 25px;
    border: 2rpx solid var(--theme-blue);
    font-size: 32rpx;
    margin-top: 10rpx;
    margin-bottom: 30rpx;
    margin-left: 35rpx;
    font-weight: 500;
    width: fit-content;
}

.info-div {
    display: flex;
    justify-content: center;
}

.venue-info-card {
    padding: 50rpx;
    background-color: white;
    width: 600rpx;
    border-radius: 50rpx;

}

.info-header {
    font-size: 28rpx;
    font-weight: 400;
    color: rgb(155,164,180);
}

.info-content {
    font-size: 34rpx;
    font-weight: 400;
    color: black;
    border-bottom: 2rpx solid rgba(155,164,180,.1);
    margin-bottom: 10rpx;
}

.time {
    font-size: 34rpx;
    font-weight: 400;
    color: black;
}


.leaderboard-title {
    padding: 10rpx 20rpx;
    width: 80%;
    margin: auto;
    display: flex;
    justify-content: center;
    color: rgb(20,39,78);
    font-size: 44rpx;
    font-weight: 600;
    margin-top: 40rpx;
    border-bottom: 2rpx solid var(--theme-blue)
}

.leaderboard {
    padding: 10rpx 20rpx 0rpx 20rpx;
    height: 430rpx;
    display: flex;
    justify-content: space-around;
    align-items: flex-end;
    overflow: hidden;
    position: relative;
}


.third-place, .first-place, .second-place {
    width: 180rpx;
    /* border-style: solid; */
    /* border-width: 2rpx 2rpx 0rpx 2rpx; */
    /* border-color: var(--theme-blue); */
    position: relative;
    display: flex;
    justify-content: center;
}

.third-place {
    height: 150rpx;
    background-color: white;
}

.first-place {
    height: 250rpx;
    background-color: white;
}

.second-place {
    height: 200rpx;
    background-color: white;
}

.avatar {
    height: 100rpx;
    width: 100rpx;
    position: absolute;
    top: -100rpx;
    border-radius: 50%;
}

.be-first {
    position: absolute;
    top: 50rpx;
    font-family:Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif;
    font-weight: 400;
    font-size: 64rpx;
}

.crown {
    height: 100rpx;
    width: 100rpx;
    position: absolute;
    top: -180rpx;
}

.visits {
    max-width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    align-self: flex-end;
    margin-bottom: 10rpx;
    color: var(--theme-blue);
    padding: 0 10rpx;
    box-sizing: border-box;
}

.number {
    color: var(--theme-blue);
    background-color: transparent;
    border: 2rpx solid var(--theme-blue);
    border-radius: 50rpx;
    /* padding: 6rpx 12rpx; */
    font-size: 32rpx;
    font-weight: 500;
    width: 70rpx;
    height: 70rpx;
    display: flex;
    align-items: center;
    justify-content: center;

}

.p {
    max-width: 100%;
    font-size: 32rpx;
    font-weight: 500;
    text-overflow: ellipsis;
    height: 48rpx;
    white-space: nowrap;
    overflow: hidden;
}

.inactive {
    background-color: lightgrey !important;
}

.my-checkins {
    background-color: rgb(20,39,78);
    width: 100%;
    height: 300rpx;
    border-top-right-radius: 50rpx;
    border-top-left-radius: 50rpx;
    display: flex;
    align-items: center;
    justify-content: space-evenly;
}

.my-info {
    padding: 40rpx;
    text-align: center;
}

.my-avatar {
    background-repeat: no-repeat;
    background-size:100%;
    border-radius: 50%;
    width: calc(var(--my-avatar-radius) * 2);
    height:calc(var(--my-avatar-radius) * 2);
}

.my-checkin-card {
    text-align: center;
}

.my-checkin-text {
    margin: 20rpx;
    font-size: 34rpx;
}

.my-checkin-count {
    margin: 15rpx;
}
