/* pages/venues/show.wxss */
.card-venue {
    background-color: white;
    border: 2rpx solid rgb(57,72,103);
    border-radius: 50rpx;
    overflow: hidden;
    box-shadow: 0px 8rpx 8rpx rgba(0,0,0,0.25);
}

.venue-image {
    height: 300rpx;
    width: 100%;
}

.venue-title {
    padding: 220rpx 20rpx;
    color: white;
    font-weight: 600;
    font-size: 54rpx;
    text-shadow: 2rpx 2rpx 4rpx rgb(57,72,103);
}

.card-venue-info-top {
    padding: 10rpx 20rpx;
}

.info-header {
    font-size: 28rpx;
    font-weight: 400;
    color: rgb(155,164,180);
}

.info-content {
    font-size: 34rpx;
    font-weight: 600;
    color: black;
    border-bottom: 2rpx solid rgba(155,164,180,.1);
    margin-bottom: 10rpx;
}

.card-venue-info-bottom {
    padding: 0 20rpx 10rpx 20rpx;
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
}

.time {
    font-size: 34rpx;
    font-weight: 600;
    color: black;
}

.tag {
    background-color: transparent;
    color: rgb(57,72,103);
    padding: 6rpx 12rpx;
    border-radius: 25px;
    border: 2rpx solid rgb(57,72,103);
    font-size: 32rpx;
    margin-bottom: 4rpx;
    font-weight: 500;
}

.leaderboard-title {
    padding: 10rpx 20rpx;
    border-top: 2rpx solid rgb(57,72,103);
    display: flex;
    justify-content: center;
    color: rgb(20,39,78);
    font-size: 44rpx;
    font-weight: 600;
}

.leaderboard {
    padding: 10rpx 20rpx 0rpx 20rpx;
    border-top: 2rpx solid rgb(57,72,103);
    height: 430rpx;
    display: flex;
    justify-content: space-around;
    align-items: flex-end;
    overflow: hidden;
    position: relative;
}

.third-place, .first-place, .second-place {
    width: 180rpx;
    border-style: solid;
    border-width: 2rpx 2rpx 0rpx 2rpx;
    border-color: rgb(57,72,103);
    position: relative;
    display: flex;
    justify-content: center;
}

.third-place {
    height: 150rpx;
}

.first-place {
    height: 250rpx;
}

.second-place {
    height: 200rpx;
}

.avatar {
    height: 100rpx;
    width: 100rpx;
    position: absolute;
    top: -100rpx;
}

.be-first {
    position: absolute;
    top: 50rpx;
    font-family:Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif;
    font-weight: 400;
    font-size: 64rpx;
}

.crown {
    height: 100rpx;
    width: 100rpx;
    position: absolute;
    top: -180rpx;
}

.visits {
    display: flex;
    flex-direction: column;
    align-items: center;
    align-self: flex-end;
    margin-bottom: 10rpx;
    padding: 10rpx 20rpx;
    color: rgb(57,72,103);
}

.number {
    color: rgb(57,72,103);
    background-color: transparent;
    border: 2rpx solid rgb(57,72,103);
    border-radius: 50rpx;
    padding: 6rpx 12rpx;
    font-size: 32rpx;
    font-weight: 500;
}

.p {
    font-size: 32rpx;
    font-weight: 500;
}

.checkin-button {
    display: flex;
    justify-content: center;
    margin-top: 40rpx !important;
    background-color: rgb(20,39,78);
    color: white;
    padding: 20rpx 100rpx;
    font-size: 36rpx;
    font-weight: bold;
    border-radius: 50rpx;
    width: fit-content;
    margin: 0 auto;
}
