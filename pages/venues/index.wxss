.my-map-design {
    width: auto;
    height: 650rpx;
    margin-bottom: 40rpx;
    border: 2rpx solid var(--theme-blue);
    box-shadow: 0rpx 8rpx 8rpx rgba(0,0,0,0.25);
    overflow: hidden;
    border-radius: 50rpx;
}

.search {
    width: auto;
    background: #FFFFFF;
    border: 2rpx solid var(--theme-blue);
    box-shadow: 0rpx 8rpx 8rpx rgba(0,0,0,0.25);
    border-radius: 50rpx;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    padding: 10rpx 20rpx;
    color: rgb(155,164,180);
    font-weight: 400;
    position: relative;
}


