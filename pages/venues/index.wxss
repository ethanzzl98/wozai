.card-venue {
    height: 350rpx;
    width: auto;
    margin-top: 40rpx;
    margin-bottom: 40rpx;
    border: 2rpx solid var(--theme-blue);
    box-shadow: 0rpx 8rpx 8rpx rgba(0,0,0,0.25);
    border-radius: 50rpx;
}

.venue-info {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin: 0 20rpx;
    margin-top: 260rpx;
}

.venue-name{
    color: white;
    font-weight: 600;
    font-size: 40rpx;
    text-shadow: 2rpx 2rpx 10rpx var(--theme-blue);
}

.venue-distance {
    color: white;
    background-color: var(--theme-blue);
    padding: 15rpx 30rpx;
    border-radius: 50rpx;
    font-weight: 600;
    font-size: 34rpx;
    margin-bottom: 6rpx;
}

.markerId {
    width: 30rpx;
    height: 30rpx;
}

.markers {
    width: 30rpx;
    height: 30rpx;
}