/* pages/venues/index.wxss */
.my-map-design {
    width: auto;
    height: 650rpx;
    margin-bottom: 40rpx;
    box-shadow: 0rpx 8rpx 8rpx rgba(0,0,0,0.25);
    overflow: hidden;
    border-radius: 50rpx;
}

.category {
    height: 40rpx;
    width: 40rpx;
    
}

.search {
    width: auto;
    background: #FFFFFF;
    border: 2rpx solid var(--theme-blue);
    box-shadow: 0rpx 8rpx 8rpx rgba(0,0,0,0.25);
    /* border-radius: 50rpx; */
    padding: 10rpx 20rpx;
    color: rgb(155,164,180);
    font-weight: 400; 
    text-align: right;
    display: flex;
    justify-content: space-between;
}

.card-venue {
    position: relative;
    height: 350rpx;
    width: auto;
    margin-top: 40rpx;
    margin-bottom: 40rpx;
    box-shadow: 0rpx 8rpx 8rpx rgba(0,0,0,0.25);
    border-radius: 50rpx;
}

.venue-info {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin: 0 20rpx;
    padding-top: 260rpx;
}

.venue-name{
    position: absolute;
    bottom: 20rpx;
    left: 20rpx;
    right: 20rpx;
    color: white;
    font-weight: 600;
    font-size: 40rpx;
    text-shadow: 2rpx 2rpx 10rpx var(--theme-blue);
}

.venue-distance {
    color: white;
    background-color: var(--theme-blue);
    padding: 15rpx 30rpx;
    border-radius: 50rpx;
    font-weight: 600;
    font-size: 34rpx;
    margin-bottom: 6rpx;
}

.markerId {
    width: 30rpx;
    height: 30rpx;
}

.markers {
    width: 30rpx;
    height: 30rpx;
}