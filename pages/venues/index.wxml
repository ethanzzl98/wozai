<!--pages/venues/index.wxml-->
<view class="main">
    <view class="my-map-design">
        <map id="myMap" class="my-map-designs" style="width:100%; height:100%;" show-location markers="{{markers}}" longitude="{{longitude}}" latitude="{{latitude}}" scale="{{14}}" bindmarkertap="bindmarkertap">
            <cover-view slot="callout" >
                <block wx:for="{{markers}}" wx:key="id">
                    <cover-view  class="callout-card-venue" marker-id="{{item.id}}" bindtap="goToShow" data-index="{{item.id}}">
                        <cover-image class="callout-image" src="{{item.venue.photo}}" ></cover-image>
                        <cover-view class="callout-content">
                            {{item.venue.name}}
                        </cover-view>
                    </cover-view>
                </block>
            </cover-view>
        </map>
    </view>
    <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
        <view class="search">
            Choose your category {{array[index]}}
            <image src="../../images/Category.png" class="category"></image>
        </view>
    </picker>
    <view wx:for="{{venuesFiltered}}" bindtap="goToShow" data-index="{{item.id}}" wx:key="id">
        <view class="card-venue" style="background-image: linear-gradient(rgba(255,255,255,0.2), rgba(0,0,0,.7)), url({{item.photo}}); background-size: cover;">
            <view class="venue-distance">
                {{item.distanceString}}
            </view>
            <view class="venue-name">{{ item.name }}</view>
        </view>
    </view>
</view>